{
  "manifest_version": 3,
  "name": "Google Docs Sidebar Hider",
  "version": "1.0",
  "description": "Automatically hides the tabs & outlines sidebar in Google Docs",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://docs.google.com/document/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://docs.google.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{6c9af1a5-de04-41b5-b832-6c3909069ffb}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}